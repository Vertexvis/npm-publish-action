{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["ES2019"]
  },
  "exclude": ["node_modules", "dist", "build"]
}
